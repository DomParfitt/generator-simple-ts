{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./lib",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
        "node_modules",
        "lib",
        "test-results",
        "**/*.test.ts",
        "__tests__/**"
    ]
}
